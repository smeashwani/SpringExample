<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="address1" class="com.training.springcore.model.Address" scope="prototype">
		<property name="city" value="ghaziabad"></property>
		<property name="state" value="UP"></property>
	</bean>
	
	<bean id="empA" class="com.training.springcore.model.Employee" init-method="afterPropertiesSet"  destroy-method="destroy">
		<lookup-method name="applyAddress" bean="address1"/>
	</bean>

	
</beans>
